---
import { TagFragment } from '@lib/datocms/commonFragments';
import { executeQuery } from '@lib/datocms/executeQuery';
import { graphql } from '@lib/datocms/graphql';
import { DraftModeToggler } from '@components/DraftModeToggler';
import { Seo, type TitleMetaLinkTag } from '@datocms/astro';
import { isDraftModeEnabled } from '@lib/draftMode';
import { getLocaleFromUrl, getFallbackLocale } from '@lib/i18n';
import '@root/src/global.css';

import { Header } from '@components/Header';
import { Footer } from '@components/Footer';

type Props = {
  additionalSeo?: TitleMetaLinkTag[];
};

const { additionalSeo = [] } = Astro.props;

// Get current locale from params or URL
const { locale } = Astro.params;
const currentLocale = locale || (await getLocaleFromUrl(Astro.url)) || (await getFallbackLocale());

const query = graphql(
  /* GraphQL */ `
    query RootQuery {
      _site {
        faviconMetaTags {
          ...TagFragment
        }
      }
    }
  `,
  [TagFragment],
);

const draftModeEnabled = isDraftModeEnabled(Astro.cookies);
const result = await executeQuery(query, { includeDrafts: draftModeEnabled });
---

<!doctype html>
<html data-theme="coffee" lang={currentLocale}>
  <head>
    <Seo data={[...result._site.faviconMetaTags, ...additionalSeo]} />
    <meta charset="UTF-8" />
    <meta name="generator" content={Astro.generator} />
  </head>
  <body class="min-h-screen flex flex-col">
    <Header locale={locale} />
    <main class="grow">
      <slot />
    </main>
    <Footer locale={locale} />
  </body>
</html>
