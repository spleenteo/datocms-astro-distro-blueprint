---
import { TagFragment } from '~/lib/datocms/commonFragments';
import { executeQuery } from '~/lib/datocms/executeQuery';
import { graphql } from '~/lib/datocms/graphql';
import { DraftModeToggler } from '~/components/DraftModeToggler';
import { Seo, type TitleMetaLinkTag } from '@datocms/astro';
import { isDraftModeEnabled } from '~/lib/draftMode';
import '~/global.css';

import { Header } from '~/components/Header';

type Props = {
  additionalSeo?: TitleMetaLinkTag[];
};

const { additionalSeo = [] } = Astro.props;

const query = graphql(
  /* GraphQL */ `
    query RootQuery {
      _site {
        faviconMetaTags {
          ...TagFragment
        }
      }
    }
  `,
  [TagFragment],
);

const draftModeEnabled = isDraftModeEnabled(Astro.cookies);
const result = await executeQuery(query, { includeDrafts: draftModeEnabled });
---

<!doctype html>
<html data-theme="coffee" lang="en">
  <head>
    <Seo data={[...result._site.faviconMetaTags, ...additionalSeo]} />
    <meta charset="UTF-8" />
    <meta name="generator" content={Astro.generator} />
  </head>
  <body class="min-h-screen flex flex-col">
    <header>
      <h1>DatoCMS + Astro Starter Kit</h1>
      <nav>
        <a class="navlink" href="https://www.datocms.com/docs/astro"> ðŸ“š Full Integration Guide </a>
        <DraftModeToggler />
      </nav>
    </header>

    <main class="grow">
      <slot />
    </main>
  </body>
</html>
