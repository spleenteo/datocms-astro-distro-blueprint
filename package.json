{
  "name": "spleenteo-distro-blueprint",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "prepare": "npx simple-git-hooks && npm run generate-schema",
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro check && astro build",
    "preview": "astro preview",
    "astro": "astro",
    "generate-schema": "dotenv -c -- bash -c 'gql.tada generate schema https://graphql.datocms.com --header \"X-Exclude-Invalid: true\" --header \"Authorization: $DATOCMS_PUBLISHED_CONTENT_CDA_TOKEN\"'",
    "load-translations": "node scripts/load-translations.js",
    "lint": "prettier --check .",
    "format": "npx prettier . --write",
    "dev:translations": "jiti scripts/watch-translations.ts",
    "prep": "run-s prep:* --print-label",
    "prep:download-translations": "jiti scripts/download-translations.ts",
    "create:block": "plop --plopfile config/plop/plopfile.mjs block",
    "create:component": "plop --plopfile config/plop/plopfile.mjs component"
  },
  "dependencies": {
    "@astrojs/check": "^0.9.4",
    "@astrojs/netlify": "^6.3.4",
    "@astrojs/react": "^4.3.0",
    "@datocms/astro": "^0.6.2",
    "@datocms/cda-client": "^0.2.6",
    "@datocms/cma-client": "^4.0.1",
    "@datocms/cma-client-node": "^4.0.1",
    "@mux/mux-player": "^2.9.1",
    "@tailwindcss/cli": "^4.1.10",
    "@tailwindcss/vite": "^4.1.10",
    "@types/dotenv-safe": "^8.1.6",
    "@types/eventsource": "^1.1.15",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "astro": "^5.9.2",
    "daisyui": "^5.0.43",
    "datocms-listen": "^1.0.2",
    "datocms-structured-text-generic-html-renderer": "^5.0.0",
    "datocms-structured-text-to-plain-text": "^5.0.0",
    "dotenv-safe": "^9.1.0",
    "eventsource": "^4.0.0",
    "gql.tada": "^1.8.10",
    "jiti": "^2.4.2",
    "jsdom": "^24.1.1",
    "jsonwebtoken": "^9.0.2",
    "react": "^18.3.1",
    "react-datocms": "^7.0.1",
    "react-dom": "^18.3.1",
    "rosetta": "^1.1.0",
    "serialize-error": "^11.0.3",
    "tailwindcss": "^4.1.10",
    "typescript": "^5.5.4"
  },
  "devDependencies": {
    "@astrojs/ts-plugin": "^1.10.4",
    "@types/jsdom": "^21.1.7",
    "@types/jsonwebtoken": "^9.0.6",
    "dotenv-cli": "^7.4.4",
    "plop": "^4.0.1",
    "prettier": "^3.3.3",
    "prettier-plugin-astro": "^0.14.1",
    "simple-git-hooks": "^2.11.1"
  },
  "simple-git-hooks": {
    "pre-commit": "npm run format"
  }
}
